<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="movie"
            type="com.chetan.movietime.data.Movie" />

        <variable
            name="listener"
            type="com.chetan.movietime.adapters.MovieClickListener" />

        <variable
            name="position"
            type="Integer" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()-> listener.onMovieClick(movie, position)}">

        <ImageView
            android:id="@+id/movie_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin_1_dp"
            app:layout_constraintDimensionRatio="2:3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:set_picture="@{movie.posterPath}" />

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/vertical_margin_half"
            android:layout_marginTop="@dimen/vertical_margin_half"
            android:layout_marginEnd="@dimen/vertical_margin_half"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{movie.title}"
            android:textColor="@color/textColorWhite"
            app:layout_constraintEnd_toStartOf="@+id/button_like"
            app:layout_constraintStart_toStartOf="@id/movie_image"
            app:layout_constraintTop_toBottomOf="@+id/movie_image" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/button_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/like_selector"
            android:checked="@{movie.favourite}"
            android:onClick="@{()-> listener.onFavouriteClick(movie, position)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_image" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="button_like,tv_movie_title" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintTop_toBottomOf="@+id/barrier" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>